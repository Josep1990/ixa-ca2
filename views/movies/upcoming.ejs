<%- include("../partials/header")%>
    <div class="container">

        <div class="row text-center" style="display: flex; flex-wrap: wrap;">
            <div class="col-lg-12">
                <h2>Our Upcoming Movies</h2>
                <br>
                <%movies.forEach(function(movie){%>
                    <div class="card" style="width: 32rem;">
                        <div class="caption">
                            <h3>
                                <%=movie.title%>
                            </h3>
                        </div>
                        <div class="thumbnail">
                            <img class="rounded" src="https://image.tmdb.org/t/p/w300<%=movie.poster_path %>">
                        </div>
                        <div class="card-body">
                            <p class="card-text"><%=movie.overview%></p>
                          </div>
                          <% if(currentUser){%>
                            <form class="todo-form" action="/index" method="POST">
                                <input hidden type="text" name="title" value="<%=movie.title%>">
                                <input hidden type="text" name="poster_path" value="https://image.tmdb.org/t/p/w300<%=movie.poster_path %>">
                                <input hidden type="text" name="overview" value="<%=movie.overview%>">
                                <button class="btn btn-success" type="submit">Save</button>
                            </form>
                        <% } %>
                    </div>
                    <br>
                    <%})%>
            </div>
        </div>

    </div>


    <%- include("../partials/footer")%>